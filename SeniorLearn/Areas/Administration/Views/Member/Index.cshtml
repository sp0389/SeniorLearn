<div class="mb-3 float-end">
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive=""> All </a>
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive="true"> Active Members </a>
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive="false"> Inactive Members </a>
</div>