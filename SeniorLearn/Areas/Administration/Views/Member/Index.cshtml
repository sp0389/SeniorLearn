@model IEnumerable<OrganisationUser>
@{
    ViewData["Title"] = "Members";
}
<h1>@ViewData["Title"]</h1>
<div class="mb-3">
    <a class="btn btn-primary" asp-action="Register"> Register Member </a>
</div>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Member Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => m.Id)</th>
                <td>@Html.DisplayFor(modelItem => m.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => m.LastName)</td>
                <td>@Html.DisplayFor(modelItem => m.Email)</td>
                <td>
                    @Html.ActionLink("Manage", "Edit", new { id = m.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

