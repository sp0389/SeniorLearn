@model PagedResult<MemberDTO>
@{
    ViewData["Title"] = "Members";
}
<h1 class="text-center mt-4">@ViewData["Title"]</h1>
<div class="mb-3">
    <a class="btn btn-primary" asp-action="Register"> Register Member </a>
</div>
<table class="table table-responsive table-bordered table-striped table-hover text-center">
    <thead >
        <tr>
            <th scope="col">Member Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Renewal Date</th>
            <th scope="col">Administration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model.Data)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => m.Id)</th>
                <td>@Html.DisplayFor(modelItem => m.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => m.LastName)</td>
                <td>@Html.DisplayFor(modelItem => m.Email)</td>
                <td>@Html.DisplayFor(modelItem => m.RenewalDate)</td>
                <td>
                    <a title="Manage" class="nav-link p-0 d-inline" style="text-decoration:underline" asp-area="Administration" asp-controller="Member" asp-action="Edit" asp-route-id="@m.Id">Manage</a> |
                    <a title="Payment" class="nav-link p-0 d-inline" style="text-decoration:underline" asp-area="Administration" asp-controller="Payment" asp-action="Index" asp-route-id="@m.Id">Payment</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@* https://www.youtube.com/watch?v=fP3LelFxPt4&t=62s *@

<div class="mb-3 float-end">
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive=""> All </a>
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive="true"> Active Members </a>
    <a class="btn btn-primary" asp-controller="Member" asp-action="Index" asp-route-isActive="false"> Inactive Members </a>
</div>

<div class="d-flex mt-1">
    <partial name="_Pager" model='Model.GetPagerModel<MemberDTO>("Member", "Index")' />
</div>
